if File.exist? ARGV[0]
  require 'rubygems'
  require 'sane'
  $VERBOSE = 1 if ARGV.find{|a| a == '-v'}
  $TEST = 1 if ARGV.find{|a| a == '-t'}
  require_relative '../lib/overlayer'
  require_relative '../lib/keyboard_input'
  
  overlay = OverLayer.new(ARGV[0])
  overlay.start_thread true
  key_input = KeyboardInput.new overlay
  key_input.start_thread # status thread
  key_input.handle_keystrokes_forever # when this method exits, we want to exit...
  
else
 puts 'syntax: filename.yml [-v] [-t] (run your other player in the background, and set its priority low)'
 exit 1
end 