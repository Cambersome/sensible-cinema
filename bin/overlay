if File.exist? ARGV[0]
  require 'sane'
  require_relative '../lib/overlayer'
  require_relative '../lib/keyboard_input'
  require 'yaml'
  
  settings = YAML.load(File.read(ARGV[0]))
  overlay =  OverLayer.new(settings)
  overlay.start_thread
  key_input = KeyboardInput.new overlay
  key_input.start_thread
  
else
 puts 'syntax: filename.yml'
 exit 1
end