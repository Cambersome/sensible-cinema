<!doctype html>
<html class="no-js" lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Play It My Way</title>
    <link rel="stylesheet" href="/css/foundation.min.css">
    <link rel="stylesheet" href="/css/app.css">
    <link href="https://fonts.googleapis.com/css?family=Bitter:700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Istok+Web" rel="stylesheet">
    <%= yield_content "header" %>
</head>

<body>

    <div data-sticky-container>

        <!-- Hamburger Menu for Small Screens -->
        <div data-sticky data-options="marginTop:0;">
            <div class="title-bar" data-responsive-toggle="responsive-menu" data-hide-for="medium">
                <button class="menu-icon" type="button" data-toggle="responsive-menu"></button>
                <img id="logo" src="/images/camera-logo.png" alt="logo">
                <div class="title-bar-title">Play It My Way</div>
            </div>

            <!-- Top Bar for Medium and Larger Screens -->
            <div class="top-bar" id="responsive-menu" data-margin-top="0" data-sticky>
                <div class="top-bar-left">
                    <ul class="menu vertical medium-horizontal dropdown" data-responsive-menu="accordion medium-dropdown">
                        <li class="show-for-medium">
                            <a href="/"><img id="logo-words" src="/images/camera-logo-side-words.png" alt="logo with words"></a>
                        </li>
                        <li class="is-dropdown-submenu-parent">
                            <a href="">Browse</a>
                            <ul class="menu dropdown" data-dropdown-menu>
                                <li><a href="/">Home</a></li>
                                <% cats = get_movies_sorted 
                                   cats.each{ |category| %>
                                  <li><a href="/list/<%= category[:type] %>"><%= category[:title] %></a></li>
                                <% } %>
                                <li><a href="">By Genre</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="/questions">About</a>
                        </li>
                        <li>
                            <a href="/faq">FAQ</a>
                        </li>
                        <li class="show-for-large">
                            <a href=""><img id="donate" src="/images/donate-button.gif"></a>
                        </li>
                    </ul>
                </div>
                <div class="top-bar-right">
                    <ul class="medium-horizontal menu align-left" data-responsive-menu="drilldown medium-dropdown">
                        <li class="show-for-medium">
                            <form action="" id="searchform" method="get" class="">
                                <div id="search-wrapper">
                                    <input id="new-search" type="text" name="new-search" value="" placeholder="Search Filtered Movies" size="15" /></div>
                                <div id="search-icon">
                                    <img src="/images/search-icon.png">
                                </div>
                            </form>
                        </li>
                        <li><a id="log-in" href="https://playitmyway.org/login">Log In</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

  <%= content %>

 <div style="clear: both;"></div>. <!-- some do, some don't need? -->
    <footer>
        <div class="grid-x">
            <div class="cell auto">
                <a href="https://playitmyway.org/support">Contact</a>
            </div>
            <div class="cell auto">
                <a href="https://playitmyway.org/">Home</a>
            </div>
            <div class="cell auto">
                <a href="">Privacy</a>
            </div>
            <div class="cell auto">
                <a href="/installation">Install</a>
            </div>
        </div>
    </footer>

    <script src="/js/vendor/jquery.js"></script>
    <script src="/js/vendor/what-input.js"></script>
    <script src="/js/vendor/foundation.js"></script>
    <script src="/js/app.js"></script>

<% if !editor?(env) %>
  <script>
  window.ga=window.ga||function(){(ga.q=ga.q||[]).push(arguments)};ga.l=+new Date;
  ga('create', 'UA-4531218-7', 'auto');
  ga('send', 'pageview');
  </script>
  <script async src='https://www.google-analytics.com/analytics.js'></script>
<% end %>

<%= render "views/_installed_js.ecr" %>
</body>

</html>
