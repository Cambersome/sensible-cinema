<script>
function markAsGoodChromeExtension() { // an override
  isInstalled = true;
  document.getElementById('success_chrome_extension_id').style.display = 'block';
  document.getElementById('how_it_works').style.display = 'none';
}

function alertIfNoExtension() {
  if (!pluginFullyInstalled()) {
    alert("You need to install the chrome extension to watch the video edited, which it appears you have not done yet, please do that then watch the video.  You can see the video page, but playback will not be edited yet...");
    window.open("/getting_started");
    return true; // let them go through anyway, felt too restrictive :|
  }
  return true;
}
</script>
