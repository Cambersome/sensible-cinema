<script>
function markAsGoodChromeExtension() { // an override
  isInstalled = true;
  document.getElementById('success_chrome_extension_id').style.display = 'block';
  document.getElementById('how_it_works').style.display = 'none';
}

function expandBox(id) {
  var box = document.getElementById(id);
  var inside_box = document.getElementById(id + "_inside");
  var image = document.getElementById(id + "_image");
  var height_wanted = inside_box.scrollHeight - parseInt(inside_box.style.height, 10);
  $(box).animate({ width: "+=20", height: "+=" + height_wanted });
  $(inside_box).animate({ width: "+=20", height: "+=" + height_wanted });
  // $(image).animate({ maxWidth: "+=20", maxHeight: "+=20" }); // wurks for max and for img too, or could set maxHeight etc :|
  // if we do this then height_wanted isn't enough for McLintock hrm...
}

</script>
