#!/usr/bin/env bash
echo "attempting to load server to https://localhost:3000"
if [[ ! -f db/local_cookie_secret ]]; then
  crystal eval 'require "secure_random"; puts SecureRandom.hex(64)' > db/local_cookie_secret
fi
if [[ ! -d sessions ]]; then
  mkdir sessions
fi
if [[ ! -d edit_descriptors ]]; then
  mkdir edit_descriptors
fi
if [[ ! -f _key.pem ]]; then
  echo "generating dev ssl keys"
  openssl req -x509 -newkey rsa:4096 -keyout _key.pem -out cert.pem -days 365 -nodes
fi
echo "building"
crystal build ./kemal_server.cr -o bin.kemal_server
echo "running"
./bin.kemal_server --ssl --ssl-key-file _key.pem --ssl-cert-file cert.pem or exit 1
