{
  "manifest_version": 2,

  "name": "Clean stream edited movie extension",
  "description": "This extension uses the clean stream player to online videos",
  "version": "0.3",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Clean stream editor plugin" // tooltip
  },
  "permissions": [
    "<all_urls>", "tabs" 
  ],
  "content_scripts": [{
      "all_frames": true,
      "js": ["contentscript.js"],
      "matches": ["<all_urls>"]
  }],
  "web_accessible_resources": ["edited_generic_player.js"],
  "icons": { "128": "icon.png" },
  "background": { "scripts": ["background.js"] },
  "externally_connectable": {
    "matches": ["*://*.amazon.com/*", "*://play.google.com/*", "*://*.youtube.com/*"] // don't have to even list netflix :|
  }
}
