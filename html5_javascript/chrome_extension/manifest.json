{
  "manifest_version": 2,

  "name": "Play it my way",
  "description": "Enables the playback of online videos edited",
  "version": "0.6",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Play it my way" // initial tooltip, though overridden
  },
  "permissions": [
    "<all_urls>", "tabs" 
  ],
  "content_scripts": [{
      "all_frames": true,
      "js": ["contentscript.js"],
      "matches": ["<all_urls>"]
  }],
  "web_accessible_resources": ["edited_generic_player.js"],
  "icons": { "128": "icon.png" },
  "background": { "scripts": ["background.js"] },
  "externally_connectable": {
    "matches": ["*://*.amazon.com/*", "*://play.google.com/*", "*://*.youtube.com/*"] // don't have to even list netflix :|
  }
}
